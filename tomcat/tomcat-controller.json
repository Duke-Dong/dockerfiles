{
   "kind":"ReplicationController",
   "apiVersion":"v1beta3",
   "metadata":{
      "name":"tomcat",
      "labels":{
         "name":"tomcat"
      }
   },
   "spec":{
      "replicas":3,
      "selector":{
         "name":"tomcat"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"tomcat"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"tomcat",
                  "image":"casa.docker/tomcat7",
                  "ports":[
                     {
                        "containerPort":8080,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}

